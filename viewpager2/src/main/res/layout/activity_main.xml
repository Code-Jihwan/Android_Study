<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/menu_frame_layout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt1"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/asdf0"
        >

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:src="@color/black"
            android:layout_gravity="end"
            android:scaleType="center"
            android:layout_marginEnd="30dp" />
    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:background="@drawable/asdf0"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="aaaaaa"
            android:padding="5dp"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/txt1"
            app:layout_constraintBottom_toBottomOf="@id/txt1"
            app:layout_constraintEnd_toStartOf="@id/ibtn1"
            android:layout_marginEnd="20dp"
            android:text="aaaaaa"
            />

        <ImageButton
            android:id="@+id/ibtn1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toTopOf="@id/txt1"
            app:layout_constraintBottom_toBottomOf="@id/txt1"
            app:layout_constraintEnd_toEndOf="@id/txt1"
            android:layout_margin="20dp"
            android:src="@color/black"
            android:background="@null"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txt1"
        android:text="aaaaa"
        />

    <TextView
        android:id="@+id/txt12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="28dp"
        android:text="aaaaa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt22"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt2"
        android:layout_margin="20dp"
        android:background="@drawable/asdf0"
        >

        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaa"
            app:layout_constraintStart_toStartOf="@id/txt22"
            app:layout_constraintTop_toTopOf="@id/txt22"
            app:layout_constraintBottom_toBottomOf="@id/txt22"
            android:layout_marginStart="20dp"
            />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@null"
            android:src="@color/black"
            app:layout_constraintTop_toTopOf="@id/txt22"
            app:layout_constraintBottom_toBottomOf="@id/txt22"
            app:layout_constraintEnd_toEndOf="@id/txt22"
            android:layout_marginEnd="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt33"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt22"
        android:layout_margin="20dp"
        android:background="@drawable/asdf0"
        >

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaa"
            app:layout_constraintStart_toStartOf="@id/txt33"
            app:layout_constraintTop_toTopOf="@id/txt33"
            app:layout_constraintBottom_toBottomOf="@id/txt33"
            android:layout_marginStart="20dp"
            />

        <ImageButton
            android:id="@+id/fv2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@color/black"
            android:background="@null"
            app:layout_constraintTop_toTopOf="@id/txt33"
            app:layout_constraintBottom_toBottomOf="@id/txt33"
            app:layout_constraintRight_toRightOf="@id/txt33"
            android:layout_marginEnd="20dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/txt44"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt33"
        android:layout_margin="20dp"
        android:background="@drawable/asdf0"
        >

        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aaaaa"
            app:layout_constraintStart_toStartOf="@id/txt44"
            app:layout_constraintTop_toTopOf="@id/txt44"
            app:layout_constraintBottom_toBottomOf="@id/txt44"
            android:layout_marginStart="20dp"
            />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@color/black"
            android:background="@null"
            app:layout_constraintTop_toTopOf="@id/txt44"
            app:layout_constraintBottom_toBottomOf="@id/txt44"
            app:layout_constraintEnd_toStartOf="@id/fv3"
            android:layout_marginEnd="20dp"
            />

        <ImageButton
            android:id="@+id/fv3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@color/black"
            android:background="@null"
            app:layout_constraintTop_toTopOf="@id/txt44"
            app:layout_constraintBottom_toBottomOf="@id/txt44"
            app:layout_constraintEnd_toEndOf="@id/txt44"
            android:layout_marginEnd="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/txt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt44"
        android:layout_margin="20dp"
        android:text="aaaaa"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="0dp"
        android:layout_height="130dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt6"
        android:layout_margin="20dp"
        />

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/Indicator"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewpager"
        app:ci_drawable="@drawable/circleindicator"
        tools:ignore="MissingClass" />

</androidx.constraintlayout.widget.ConstraintLayout>


    <!-- CircleIndicator3
    dependencies {
        implementation 'me.relex:circleindicator:2.1.6'
        implementation 'androidx.viewpager2:viewpager2:1.0.0'
    }
    -->